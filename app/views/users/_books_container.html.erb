<div id="books_container" class="span6 offset3 center on_user_page">

 <h1><%= @user.book_specimens.count %>
 </h1>
      <% @user.book_specimens.each do |book_specimen| %>
      <% @book = book_specimen.book %>

      <div class="book_wrapper row">
        <%= link_to(book_specimen, class: "book_block") do %>
            <div class="book_block">
              <div class="cover_wrapper"><img class="cover" src="" alt=""/></div>
              <div class="title"><%= @book.title %></div>
              <div class="author"><%= @book.author_names %></div>
            </div>
        <% end %>
      </div>

  <% end %>

</div>